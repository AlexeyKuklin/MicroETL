        "delimiter" : ";",
        "quotechar" : "^",
        "format"    : { "THIS_DATE_FIELD" : "YYYY/MM/DD HH24:MI:SS"},
        "dst_conn"  : "conn_Oracle_1",
        "dst_table" : "schema.table"
     },


     {
