{
   "max_tasks":3,

   "dsn" : {
         "DSN1" :
           "(DESCRIPTION = \
              (ADDRESS_LIST = \
              (ADDRESS = (PROTOCOL = TCP)(HOST = HOST1)(PORT = 1521)) \
              ) \
              (CONNECT_DATA = \
                 (SERVER = DEDICATED) \
                 (SERVICE_NAME = SERVICE1) \
              ) \
           )",

         "DSN2" : 
          "(DESCRIPTION = \
            (ADDRESS_LIST = \
            (ADDRESS = (PROTOCOL = TCP)(HOST = HOST2)(PORT = 1521)) \
            ) \
            (CONNECT_DATA = \
            (SERVER = DEDICATED) \
            (SERVICE_NAME = SERVICE2) \
           ))"
   },

   "connections" : {
       "conn_Oracle_1" : {
          "type"    : "Oracle",
          "dsn"     : "DSN1", 
          "user"    : "user",
          "password": "pass",
          "encoding": "UTF-8"
       },


       "conn_Oracle_2" : {
          "type"    : "Oracle",
          "dsn"     : "DSN2", 
          "user"    : "user",
          "password": "pass",
          "encoding": "UTF-8"
       },

    
       "conn_PostgresQL" : {
          "type"    : "PostgresQL",
          "host"    : "ssmlpgsql",
          "dbname"  : "postgres",
          "port"    : 5432,
          "user"    : "user",
          "password": "pass"
       },


       "conn_MSSQL" : {
          "type"     : "MSSQL",
          "driver"   : "ODBC Driver 13 for SQL Server",
          "server"   : "server_MSSQL", 
          "port"     : "",
          "database" : "database",
          "trusted_connection": "yes", 
          "username" : "myusername", 
          "password" : "mypassword"
       }

    },

   "tasks" : [
     {
        "id": 1,
        "chunk_size": 10000,
        "src_conn"  : "conn_Oracle_1",
        "src_table" : "schema.table",
        "src_query" : "",
